@page
@model TimeLog.Pages.Projects.IndexModel

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Project[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project[0].IsDefault)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project[0].DefaultClient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project[0].DefaultLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project[0].DefaultActivityType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project[0].DefaultBillableRate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Project)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDefault)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DefaultClient.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DefaultLocation.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DefaultActivityType.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DefaultBillableRate)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>