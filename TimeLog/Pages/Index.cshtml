    <div class="col-md-3">
        @if (Model.ActivityEntityExists)
        {
            <form method="post">
                <div class="d-flex">
                    <div class="p-1 bg-primary"><a asp-page="Activities/Create" class="btn btn-link"><i class="fa fa-plus"></i> New</a></div>
                    <div class="p-1 bg-primary"><a asp-page="Activities/Edit" asp-route-id="@Model.ActivityEntity.Id" class="btn btn-link"><i class="fa fa-edit"></i> Edit</a></div>
                    <div class="p-1 bg-primary"><a asp-page="Activities/Details" asp-route-id="@Model.ActivityEntity.Id" class="btn btn-link"><i class="fa fa-angle-right"></i> View</a></div>
                    <div class="p-1 bg-primary"><a asp-page-handler="Close" asp-route-id="@Model.ActivityEntity.Id" class="btn btn-link"><i class="fa fa-flag-checkered"></i>Close</a></div>
                </div>
                <div class="row m-1">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ActivityEntity.Id"/>
                    <div class="form-row">
                        <div class="col-md-12">
                            <label asp-for="ActivityEntity.EndTime"></label>
                            <input asp-for="ActivityEntity.EndTime" class="form-control" autofocus/>
                            <span asp-validation-for="ActivityEntity.EndTime" class="text-danger"></span>
                            
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="ActivityEntity.Tasks"></label>
                        <textarea asp-for="ActivityEntity.Tasks" class="form-control"></textarea>
                        <span asp-validation-for="ActivityEntity.Tasks" class="text-danger"></span>
                        <script>
                            CKEDITOR.replace("ActivityEntity.Tasks",
                                { disableAutoInline: true });
                        </script>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" asp-page-handler="SaveAe" class="btn btn-primary"/>
                    </div>

                </div>
            </form>
        }
        else
        {
            <div class="form-row">
                <div class="col-12">
                    <a asp-page="Activities/Create" class="btn btn-link" style="color: white;"><i class="fa fa-plus"></i> Create New</a>
                </div>
            </div>
        }
    </div>
</div>