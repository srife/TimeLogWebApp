@page
@model TimeLog.Pages.Activities.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Activity</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            <span style="white-space: nowrap">
                @Model.ActivityEntity.Date.ToString("yyyy/MM/dd")&nbsp;&nbsp;
                <span style="white-space: nowrap">
                    @Model.ActivityEntity.StartTime.ToString("HH:mm")-
                    @if (Model.ActivityEntity.EndTime.HasValue)
                    {
                        @Model.ActivityEntity.EndTime.Value.ToString("HH:mm")
                    }
                </span>
            </span>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActivityEntity.Project)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActivityEntity.Project.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActivityEntity.ActivityType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActivityEntity.ActivityType.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActivityEntity.Client)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActivityEntity.Client.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActivityEntity.Billable)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActivityEntity.Billable)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActivityEntity.Tasks)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.ActivityEntity.Tasks)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="ActivityEntity.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>