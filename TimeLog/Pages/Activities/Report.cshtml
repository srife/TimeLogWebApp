<fieldset>
    <legend>Billable Tasks</legend>
    <div class="table-responsive">
        <table class="table activity-rt">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Times</th>
                    <th>Duration</th>
                    <th>@Html.DisplayNameFor(model => model.ActivityEntities[0].ActivityTypeId)/@Html.DisplayNameFor(model => model.ActivityEntities[0].Client)</th>
                    <th>@Html.DisplayNameFor(model => model.ActivityEntities[0].Tasks)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ActivityEntities)
                {
                    switch (item.Date.DayOfWeek)
                    {
                        case DayOfWeek.Monday:
                            @Html.Raw("<tr class='monday'>")
                            break;
                        case DayOfWeek.Tuesday:
                            @Html.Raw("<tr class='tuesday'>");
                            break;
                        case DayOfWeek.Wednesday:
                            @Html.Raw("<tr class='wednesday'>");
                            break;
                        case DayOfWeek.Thursday:
                            @Html.Raw("<tr class='thursday'>");
                            break;
                        case DayOfWeek.Friday:
                            @Html.Raw("<tr class='friday'>");
                            break;
                        case DayOfWeek.Saturday:
                            @Html.Raw("<tr class='saturday'>");
                            break;
                        case DayOfWeek.Sunday:
                            @Html.Raw("<tr class='sunday'>");
                            break;
                        default:
                            @Html.Raw("<tr>");
                            break;

                    }
                <td>
                    <a asp-page="/Activities/Details" asp-route-id="@item.Id" target="_blank">
                        <span>@item.Date.ToString("yyyy/MM/dd")</span>
                        <span>@item.Date.DayOfWeek</span>
                    </a>
                </td>
                <td>
                    <span>
                        @item.StartTime.ToString("HH:mm")-
                        @if (item.EndTime.HasValue)
                        {
                            @item.EndTime.Value.ToString("HH:mm")
                        }
                    </span>
                </td>
                <td>@Model.ConvertDurationToTimeSpan(item.DurationSec)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActivityType.Name)<br />
                    @if (!string.IsNullOrEmpty(item.Client.Name))
                    {
                        <span class="client-display-small">@Html.DisplayFor(modelItem => item.Client.Name)</span>
                    }
                </td>
                <td>
                    <div class="short-task-display">
                        @if (!string.IsNullOrEmpty(item.Project.Name))
                        {
                            <span class="project-display-small">@Html.DisplayFor(modelItem => item.Project.Name)</span><br />
                        }
                        @if (!string.IsNullOrEmpty(item.InvoiceStatement))
                        {
                            @Html.Raw(item.InvoiceStatement)
                        }
                        else
                        {
                            <span class="alert-danger">Tasks:</span>
                            @Html.Raw(item.Tasks)
                        }
                    </div>
                </td>

                @Html.Raw("</tr>");
            }
                </tbody>
            </table>
        </div>
    </fieldset>

<fieldset>
        <legend>Billable Tasks Formatted</legend>
        <div class="d-flex">
            <div class="p-2">
                <div class="table-responsive">
                    <table id="TableBillableTasksFormatted" class="table activity-rt-formatted">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Duration</th>
                                <th>Project/Type</th>
                                <th>@Html.DisplayNameFor(model => model.ActivityEntities[0].InvoiceStatement)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ActivityEntities)
                            {
                            <tr>
                                <td>
                                    <span>@item.Date.ToString("yyyy/MM/dd")</span>
                                </td>

                                <td>@Model.ConvertDurationToTimeSpan(item.DurationSec)</td>
                                <td>@if (!string.IsNullOrEmpty(item.Project.Name)){@Html.DisplayFor(modelItem => item.Project.Name)<br />}@Html.DisplayFor(modelItem => item.ActivityType.Name)</td>
                                <td>                                   
                                    @if (!string.IsNullOrEmpty(item.InvoiceStatement))
                                    {
                                        @Html.Raw(item.InvoiceStatement)
                                    }
                                    else
                                    {
                                        <span class="alert-danger">Tasks:</span>
                                        @Html.Raw(item.Tasks)
                                    }
                                    
                                </td>
                            </tr>
                                }
                        </tbody>
                    </table>                    
                </div>
            </div>
            <div class="p-2">
                <span id="ButtonBillableTasksFormatted" style="cursor:pointer;"><i class="fa fa-copy"></i></span>
            </div>
        </div>
    </fieldset>