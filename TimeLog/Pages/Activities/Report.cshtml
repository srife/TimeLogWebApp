@page
@model TimeLog.Pages.Activities.ReportModel
@{ ViewData["Title"] = "Report";}
<h1>Activities</h1>

<form method="post">
    <div class="d-flex">
        <div class="p-3 bg-primary"></div>
        <div class="p-3 bg-primary">
            <select asp-for="SelectedTimeFrame" class="form-control" asp-items="@Model.TimeFramesSelectList"></select>
        </div>
        <div class="p-3 bg-primary flex-grow-1">
            <button type="submit" class="btn btn-link" asp-page-handler="TimeFrame">Go</button>
        </div>

        <div class="p-3 bg-primary">
            <div><span>Start: @Html.DisplayFor(model => model.StartTime)</span></div>
            <div><span>End: @Html.DisplayFor(model => model.EndTime)</span></div>
        </div>
    </div>
</form>

<fieldset>
    <legend>Billable By Day</legend>
    <div class="table-responsive">
        <table class="table activity-d">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Description</th>
                    <th></th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ReportDetailsByDay)
                {
                    <tr class="@item.DayOfWeek.ToString().ToLower()">
                        <td>@item.StartDay.ToString("yyyy/MM/dd")</td>
                        <td>
                            @foreach (var child in Model.ActivityEntities.Where(x => x.StartTime.Year == item.StartDay.Year && x.StartTime.Month == item.StartDay.Month && x.StartTime.Day == item.StartDay.Day).OrderBy(x => x.Client.Name).ThenBy(x => x.Project.Name).ToList())
                            {
                                <table style="width:100%">
                                    <tr>
                                        <td style="width:60%">@child.Client.Name @child.Project.Name</td>
                                        <td style="width:20%">@child.StartTime.ToString("HH:mm") - @child.EndTime?.ToString("HH:mm")<br /></td>
                                        @{
                                            var convertedEndTime = (DateTimeOffset)child.EndTime;
                                        }
                                        <td style="width:20%">@Model.ConvertDurationToDecimal(convertedEndTime.Subtract(child.StartTime).TotalSeconds).ToString("0.00")</td>
                                    </tr>
                                </table>
                            }
                        </td>
                        <td>
                            @{
                                var ts = Model.ActivityEntities.Where(x => x.StartTime.Year == item.StartDay.Year && x.StartTime.Month == item.StartDay.Month && x.StartTime.Day == item.StartDay.Day).OrderBy(x => x.Client.Name).ThenBy(x => x.Project.Name).Sum(x => x.DurationSec);
                                var decTs = (decimal)ts;
                                decTs = Math.Round(decTs / 900) * 900;
                            }
                            @TimeSpan.FromSeconds((double)decTs).TotalHours.ToString().Replace("0", "")
                        </td>
                        <td></td>
                    </tr>
                }
                <tr>
                    <td></td>
                    <td>Total Hours</td>
                    <td>@Model.ReportDetailsByDay.Sum(x => x.Hrs).ToString("0.00")</td>
                    <td></td>
                </tr>
                <tr>
                    <td></td>
                    <td>Total</td>
                    <td></td>
                    <td>@Model.ReportDetailsByDay.Sum(x => x.Amt).ToString("0.00")</td>
                </tr>
            </tbody>
        </table>
    </div>
</fieldset>

<fieldset>
    <legend>Billable By Day Formatted</legend>
    <div class="d-flex">
        <div class="p-2">
            <div class="table-responsive">
                <table id="TableBillableByDayFormatted" class="table activity-d-formatted">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Description</th>
                            <th>Hours</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ReportDetailsByDay)
                        {
                        <tr>
                            <td>@item.StartDay.ToString("yyyy/MM/dd")</td>
                            <td>
                                <table>
                                @foreach (var child in Model.ActivityEntities.Where(x => x.StartTime.Year == item.StartDay.Year && x.StartTime.Month == item.StartDay.Month && x.StartTime.Day == item.StartDay.Day).OrderBy(x => x.Client.Name).ThenBy(x => x.Project.Name).ToList())
                                {
                                    <tr>
                                        <td>@child.Project.Name</td>
                                        <td>@child.StartTime.ToString("HH:mm") - @child.EndTime?.ToString("HH:mm")</td>
                                        @{
                                            var convertedEndTime = (DateTimeOffset)child.EndTime;
                                            }
                                        <td>@Model.ConvertDurationToDecimal(convertedEndTime.Subtract(child.StartTime).TotalSeconds).ToString("0.00")</td>
                                    </tr>
                                    }</table></td>
                            <td>@{
                                    var ts = Model.ActivityEntities.Where(x => x.StartTime.Year == item.StartDay.Year && x.StartTime.Month == item.StartDay.Month && x.StartTime.Day == item.StartDay.Day).OrderBy(x => x.Client.Name).ThenBy(x => x.Project.Name).Sum(x => x.DurationSec);
                                    var decTs = (decimal)ts;
                                    decTs = Math.Round(decTs / 900) * 900;
                            }@TimeSpan.FromSeconds((double)decTs).TotalHours.ToString().Replace("0", "")</td>
                            <td></td>
                        </tr>
                        }
                        <tr>
                            <td>&nbsp;</td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td>Total Hours</td>
                            <td>@Model.ReportDetailsByDay.Sum(x => x.Hrs).ToString("0.00")</td>
                            <td></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td>TOTAL</td>
                            <td></td>
                            <td>@Model.ReportDetailsByDay.Sum(x => x.Amt).ToString("0.00")</td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>
        <div class="p-2"><span id="ButtonBillableByDayFormattedButton" style="cursor:pointer;"><i class="fa fa-copy"></i></span></div>
    </div>
</fieldset>

