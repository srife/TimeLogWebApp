@page
@model TimeLog.Pages.Activities.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Activity</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ActivityEntity.Id" />
            <div class="form-row">
                <div class="col-md-3 mb-3">
                    <label asp-for="ActivityEntity.StartTime"></label>
                    <input asp-for="ActivityEntity.StartTime" class="form-control" placeholder="ActivityEntity.StartTime" />
                    <span asp-validation-for="ActivityEntity.StartTime" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-3">
                    <label asp-for="ActivityEntity.EndTime"></label>
                    <input asp-for="ActivityEntity.EndTime" class="form-control" autofocus />
                    <span asp-validation-for="ActivityEntity.EndTime" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-3">
                    <label asp-for="ActivityEntity.LocationId"></label>
                    <select asp-for="ActivityEntity.LocationId" class="form-control" asp-items="@Model.LocationSelectList"></select>
                </div>
                <div class="col-md-3 mb-3">
                    <label asp-for="ActivityEntity.ProjectId"></label>
                    <select asp-for="ActivityEntity.ProjectId" class="form-control" asp-items="@Model.ProjectsSelectList"></select>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-3 mb-3">
                    <label asp-for="ActivityEntity.ActivityTypeId"></label>
                    <select asp-for="ActivityEntity.ActivityTypeId" class="form-control" asp-items="@Model.ActivityTypesSelectList"></select>
                    <span asp-validation-for="ActivityEntity.ActivityTypeId" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-3">
                    <label asp-for="ActivityEntity.ClientId"></label>
                    <select asp-for="ActivityEntity.ClientId" class="form-control" asp-items="@Model.ClientSelectList"></select>
                    <span asp-validation-for="ActivityEntity.ClientId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ActivityEntity.Billable" /> @Html.DisplayNameFor(model => model.ActivityEntity.Billable)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ActivityEntity.Tasks"></label>
                <textarea asp-for="ActivityEntity.Tasks" class="form-control"></textarea>
                <span asp-validation-for="ActivityEntity.Tasks" class="text-danger"></span>
                <script>CKEDITOR.replace("ActivityEntity.Tasks");</script>
            </div>
            <div class="form-group">
                <label asp-for="ActivityEntity.InvoiceStatement"></label>
                <textarea asp-for="ActivityEntity.InvoiceStatement" class="form-control"></textarea>
                <span asp-validation-for="ActivityEntity.InvoiceStatement" class="text-danger"></span>
                <script>CKEDITOR.replace("ActivityEntity.InvoiceStatement");</script>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}