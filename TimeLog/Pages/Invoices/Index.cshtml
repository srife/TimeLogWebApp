@page
@model TimeLog.Pages.Invoices.IndexModel

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Invoices[0].InvoiceNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoices[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoices[0].PurchaseOrderNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoices[0].Client.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoices[0].Contact.DisplayName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoices[0].Address.AddressLine1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoices[0].TotalHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoices[0].TotalAmount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Invoices)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.InvoiceNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PurchaseOrderNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Client.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contact.DisplayName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalHours)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalAmount)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>